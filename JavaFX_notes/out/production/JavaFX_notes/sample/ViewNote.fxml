<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="sample.ViewNoteController">
    <children>
        <Pane fx:id="pane" prefHeight="500" prefWidth="700">
            <children>
                <Button fx:id="removeButton" layoutX="200.0" layoutY="10.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Remove this note" />
                <Button fx:id="saveButton" layoutX="351.0" layoutY="10.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Save changes" />
                <TextArea fx:id="number" layoutX="50.0" layoutY="100.0" prefHeight="50.0" prefWidth="100.0" />
                <TextArea fx:id="name" layoutX="150.0" layoutY="100.0" prefHeight="50.0" prefWidth="100.0" />
                <TextArea fx:id="text" layoutX="250.0" layoutY="100.0" prefHeight="50.0" prefWidth="400.0" />
                <TextArea fx:id="numberColumn" layoutX="50.0" layoutY="150.0" prefHeight="300.0" prefWidth="100.0" />
                <TextArea fx:id="nameColumn" layoutX="150.0" layoutY="150.0" prefHeight="300.0" prefWidth="100.0" />
                <TextArea fx:id="textColumn" layoutX="250.0" layoutY="150.0" prefHeight="300.0" prefWidth="400.0" />
            </children>
        </Pane>
    </children>
</GridPane>
